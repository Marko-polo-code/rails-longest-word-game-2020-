
<h1>Games#new</h1>
<p>Find me in app/views/games/new.html.erb</p>

 <ul>
  <% @letters.each do |letter| %>
   <li><%= letter %></li>
   <% end %>
 </ul>

 <form action="/score">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
   <input type="text" name="letter" placeholder="What is the longest word you can find?">
   <input type="submit">
 </form>
